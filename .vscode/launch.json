{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run API RIG",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/App/bin/Debug/net10.0/App.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/App",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "AVALONIA_IM_MODULE": "none"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Run Core Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/tests/Core.Tests/Core.Tests.csproj"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Run All Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/API_RIG.slnx"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        }
    ]
}
