<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:PostmanClone.App.ViewModels"
        mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="700"
        x:Class="PostmanClone.App.Views.about_dialog"
        x:DataType="vm:about_view_model"
        Title="About API Rig"
        Width="650"
        Height="700"
        MinWidth="500"
        MinHeight="500"
        WindowStartupLocation="CenterOwner"
        CanResize="True"
        Background="#1E1E1E">

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Margin="25">
        <!-- Header with Logo and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="15" Margin="0,0,0,20">
            <Border Background="#FF6C37" CornerRadius="10" Padding="10">
                <TextBlock Text="ðŸš€" FontSize="32"/>
            </Border>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{Binding ApplicationName}" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="#FFFFFF"/>
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <TextBlock Text="{Binding Version, StringFormat='Version {0}'}"
                               FontSize="14"
                               Foreground="#888"/>
                    <TextBlock Text="|" Foreground="#555"/>
                    <TextBlock Text="{Binding BuildDate}"
                               FontSize="14"
                               Foreground="#888"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Tech Stack Badge -->
        <Border Grid.Row="1" 
                Background="#2D2D2D" 
                CornerRadius="5" 
                Padding="10,8"
                Margin="0,0,0,15"
                HorizontalAlignment="Left">
            <TextBlock Text="{Binding TechStack}" 
                       FontSize="12" 
                       Foreground="#FF6C37"
                       FontWeight="SemiBold"/>
        </Border>

        <!-- Description -->
        <Border Grid.Row="2" 
                Background="#252526" 
                CornerRadius="8" 
                Padding="15"
                Margin="0,0,0,20">
            <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding Description}" 
                           FontSize="13"
                           Foreground="#CCCCCC"
                           TextWrapping="Wrap"
                           LineHeight="22"/>
            </ScrollViewer>
        </Border>

        <!-- Team Members Section -->
        <Grid Grid.Row="3" RowDefinitions="Auto,*">
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
                <TextBlock Text="ðŸ‘¥" FontSize="18"/>
                <TextBlock Text="Team Members" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Foreground="#FFFFFF"/>
                <Border Background="#3C8039" CornerRadius="10" Padding="8,2">
                    <TextBlock Text="{Binding TestingStatus}" 
                               FontSize="11" 
                               Foreground="#FFFFFF"/>
                </Border>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding TeamMembers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:team_member_model">
                            <Border Background="#2D2D2D" 
                                    CornerRadius="8" 
                                    Padding="15"
                                    Margin="0,0,0,10">
                                <Grid RowDefinitions="Auto,Auto,Auto">
                                    <!-- Name -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10">
                                        <Border Background="#404040" CornerRadius="15" Width="30" Height="30">
                                            <TextBlock Text="ðŸ‘¤"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontSize="14"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="15"
                                                   FontWeight="SemiBold"
                                                   Foreground="#FFFFFF"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Role -->
                                    <Border Grid.Row="1" 
                                            Background="#3C3C3C" 
                                            CornerRadius="3" 
                                            Padding="6,3"
                                            Margin="40,8,0,8"
                                            HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Role}" 
                                                   FontSize="11"
                                                   Foreground="#FF6C37"/>
                                    </Border>
                                    
                                    <!-- Contributions -->
                                    <TextBlock Grid.Row="2" 
                                               Text="{Binding Contributions}" 
                                               FontSize="12"
                                               Foreground="#AAAAAA"
                                               TextWrapping="Wrap"
                                               Margin="40,0,0,0"
                                               LineHeight="18"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="4" ColumnDefinitions="*,Auto" Margin="0,15,0,0">
            <TextBlock Grid.Column="0" 
                       Text="{Binding License}"
                       FontSize="12"
                       Foreground="#666"
                       VerticalAlignment="Center"/>
            <Button Grid.Column="1"
                    Content="Close"
                    Click="CloseButton_Click"
                    Padding="25,10"
                    Background="#FF6C37"
                    Foreground="#FFFFFF"
                    FontWeight="SemiBold"/>
        </Grid>
    </Grid>
</Window>
