<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PostmanClone.App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
             x:Class="PostmanClone.App.Views.request_editor_view"
             x:DataType="vm:request_editor_view_model">

    <UserControl.Styles>
        <Style Selector="TextBox.url-input">
            <Setter Property="Background" Value="#0D1117"/>
            <Setter Property="Foreground" Value="#C9D1D9"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontFamily" Value="JetBrains Mono, Consolas, monospace"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style Selector="TextBox.url-input:focus">
            <Setter Property="BorderBrush" Value="#58A6FF"/>
        </Style>
        <Style Selector="ComboBox.method-selector">
            <Setter Property="Background" Value="#21262D"/>
            <Setter Property="Foreground" Value="#7EE787"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- URL Bar -->
        <Border Grid.Row="0" 
                Background="#161B22" 
                CornerRadius="12" 
                Padding="16"
                BorderBrush="#21262D"
                BorderThickness="1"
                Margin="0,0,0,12">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Method Selector -->
                <ComboBox Grid.Column="0" 
                          Classes="method-selector"
                          ItemsSource="{Binding available_methods}"
                          SelectedItem="{Binding SelectedMethod}"
                          MinWidth="110"
                          Margin="0,0,12,0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                       FontWeight="Bold"
                                       Foreground="#7EE787"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                
                <!-- URL Input -->
                <TextBox Grid.Column="1" 
                         Classes="url-input"
                         Text="{Binding Url, Mode=TwoWay}"
                         Watermark="Enter request URL (e.g., https://api.example.com/users)"
                         Margin="0,0,12,0"/>
                
                <!-- Send Button -->
                <Button Grid.Column="2" 
                        Command="{Binding SendRequestCommand}"
                        MinWidth="100"
                        HorizontalContentAlignment="Center">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="â–¶" FontSize="10" IsVisible="{Binding !IsSending}"/>
                            <TextBlock Text="Send" IsVisible="{Binding !IsSending}" FontWeight="SemiBold"/>
                            <TextBlock Text="Sending..." IsVisible="{Binding IsSending}"/>
                        </StackPanel>
                    </Button.Content>
                    <Button.Styles>
                        <Style Selector="Button">
                            <Setter Property="Background" Value="#238636"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="CornerRadius" Value="6"/>
                            <Setter Property="Padding" Value="16,10"/>
                        </Style>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#2EA043"/>
                        </Style>
                        <Style Selector="Button:disabled /template/ ContentPresenter">
                            <Setter Property="Background" Value="#21262D"/>
                            <Setter Property="Opacity" Value="0.6"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </Grid>
        </Border>

        <!-- Tabs for Headers/Body -->
        <Border Grid.Row="1" Grid.RowSpan="2" 
                Background="#161B22" 
                CornerRadius="12"
                BorderBrush="#21262D"
                BorderThickness="1"
                Padding="4"
                MinHeight="120">
            <TabControl Background="Transparent">
                <TabControl.Styles>
                    <Style Selector="TabItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#8B949E"/>
                        <Setter Property="Padding" Value="16,10"/>
                        <Setter Property="FontSize" Value="13"/>
                    </Style>
                    <Style Selector="TabItem:selected">
                        <Setter Property="Foreground" Value="#F0F6FC"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                    </Style>
                </TabControl.Styles>
                
                <!-- Headers Tab -->
                <TabItem Header="Headers">
                    <Grid RowDefinitions="Auto,*" Margin="12">
                        <Button Grid.Row="0" 
                                Command="{Binding AddHeaderCommand}"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,12">
                            <Button.Styles>
                                <Style Selector="Button">
                                    <Setter Property="Background" Value="#21262D"/>
                                    <Setter Property="Foreground" Value="#58A6FF"/>
                                    <Setter Property="BorderBrush" Value="#30363D"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="CornerRadius" Value="6"/>
                                    <Setter Property="Padding" Value="12,6"/>
                                </Style>
                                <Style Selector="Button:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="#30363D"/>
                                </Style>
                            </Button.Styles>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="+" FontWeight="Bold"/>
                                <TextBlock Text="Add Header"/>
                            </StackPanel>
                        </Button>
                        
                        <ScrollViewer Grid.Row="1">
                            <ItemsControl ItemsSource="{Binding Headers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:key_value_pair_view_model">
                                        <Border Background="#0D1117" 
                                                CornerRadius="6" 
                                                Padding="8"
                                                Margin="0,0,0,6">
                                            <Grid ColumnDefinitions="Auto,*,*" Margin="0">
                                                <CheckBox Grid.Column="0" 
                                                          IsChecked="{Binding IsEnabled}"
                                                          Margin="0,0,12,0"/>
                                                <TextBox Grid.Column="1" 
                                                         Text="{Binding Key, Mode=TwoWay}"
                                                         Watermark="Header name"
                                                         Background="#161B22"
                                                         Foreground="#C9D1D9"
                                                         BorderBrush="#30363D"
                                                         CornerRadius="4"
                                                         Padding="8,6"
                                                         Margin="0,0,8,0"/>
                                                <TextBox Grid.Column="2" 
                                                         Text="{Binding Value, Mode=TwoWay}"
                                                         Watermark="Value"
                                                         Background="#161B22"
                                                         Foreground="#C9D1D9"
                                                         BorderBrush="#30363D"
                                                         CornerRadius="4"
                                                         Padding="8,6"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </TabItem>

                <!-- Body Tab -->
                <TabItem Header="Body">
                    <Grid RowDefinitions="Auto,*" Margin="12">
                        <Border Grid.Row="0" 
                                Background="#21262D" 
                                CornerRadius="6" 
                                Padding="10,6"
                                Margin="0,0,0,12"
                                HorizontalAlignment="Left">
                            <TextBlock Text="application/json" 
                                       FontSize="11" 
                                       Foreground="#8B949E"
                                       FontFamily="JetBrains Mono, Consolas, monospace"/>
                        </Border>
                        
                        <TextBox Grid.Row="1" 
                                 Text="{Binding RequestBody, Mode=TwoWay}"
                                 AcceptsReturn="True"
                                 AcceptsTab="True"
                                 TextWrapping="NoWrap"
                                 FontFamily="JetBrains Mono, Consolas, monospace"
                                 FontSize="13"
                                 Watermark="Enter JSON body..."
                                 Background="#0D1117"
                                 Foreground="#C9D1D9"
                                 BorderBrush="#30363D"
                                 CornerRadius="8"
                                 Padding="12"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</UserControl>
