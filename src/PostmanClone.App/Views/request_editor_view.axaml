<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PostmanClone.App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
             x:Class="PostmanClone.App.Views.request_editor_view"
             x:DataType="vm:request_editor_view_model">

    <Grid RowDefinitions="Auto,Auto,Auto,*">
        <!-- Request Name -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,10">
            <TextBlock Grid.Column="0" 
                       Text="Name:" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       Foreground="#CCCCCC"/>
            <TextBox Grid.Column="1" 
                     Text="{Binding RequestName, Mode=TwoWay}"
                     Watermark="Enter request name"
                     Margin="0,0,10,0"/>
            <Button Grid.Column="2"
                    Command="{Binding SaveRequestCommand}"
                    MinWidth="80"
                    HorizontalContentAlignment="Center">
                <Button.Content>
                    <Panel>
                        <TextBlock Text="Save" IsVisible="{Binding !IsSaving}"/>
                        <TextBlock Text="Saving..." IsVisible="{Binding IsSaving}"/>
                    </Panel>
                </Button.Content>
                <Button.Styles>
                    <Style Selector="Button">
                        <Setter Property="Background" Value="#28A745"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#218838"/>
                    </Style>
                    <Style Selector="Button:disabled">
                        <Setter Property="Opacity" Value="0.5"/>
                    </Style>
                </Button.Styles>
            </Button>
        </Grid>
        
        <!-- URL Bar -->
        <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,10">
            <!-- Method Selector -->
            <ComboBox Grid.Column="0" 
                      ItemsSource="{Binding available_methods}"
                      SelectedItem="{Binding SelectedMethod}"
                      MinWidth="100"
                      Margin="0,0,10,0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   FontWeight="Bold"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <!-- URL Input -->
            <TextBox Grid.Column="1" 
                     Text="{Binding Url, Mode=TwoWay}"
                     Watermark="Enter request URL"
                     FontFamily="Consolas"
                     Margin="0,0,10,0"/>
            
            <!-- Send Button -->
            <Button Grid.Column="2" 
                    Command="{Binding SendRequestCommand}"
                    MinWidth="80"
                    HorizontalContentAlignment="Center">
                <Button.Content>
                    <Panel>
                        <TextBlock Text="Send" IsVisible="{Binding !IsSending}"/>
                        <TextBlock Text="Sending..." IsVisible="{Binding IsSending}"/>
                    </Panel>
                </Button.Content>
                <Button.Styles>
                    <Style Selector="Button">
                        <Setter Property="Background" Value="#0078D4"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#106EBE"/>
                    </Style>
                </Button.Styles>
            </Button>
        </Grid>

        <!-- Tabs for Headers/Body -->
        <TabControl Grid.Row="2" Grid.RowSpan="2" MinHeight="150">
            <!-- Headers Tab -->
            <TabItem Header="Headers">
                <Grid RowDefinitions="Auto,*">
                    <Button Grid.Row="0" 
                            Command="{Binding AddHeaderCommand}"
                            Content="+ Add Header"
                            HorizontalAlignment="Left"
                            Margin="0,5"/>
                    
                    <ScrollViewer Grid.Row="1" Margin="0,5">
                        <ItemsControl ItemsSource="{Binding Headers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:key_value_pair_view_model">
                                    <Grid ColumnDefinitions="Auto,*,*,Auto" Margin="0,2">
                                        <CheckBox Grid.Column="0" 
                                                  IsChecked="{Binding IsEnabled}"
                                                  Margin="0,0,10,0"/>
                                        <TextBox Grid.Column="1" 
                                                 Text="{Binding Key, Mode=TwoWay}"
                                                 Watermark="Key"
                                                 Margin="0,0,5,0"/>
                                        <TextBox Grid.Column="2" 
                                                 Text="{Binding Value, Mode=TwoWay}"
                                                 Watermark="Value"
                                                 Margin="5,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Body Tab -->
            <TabItem Header="Body">
                <Grid RowDefinitions="Auto,*">
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Content-Type: application/json" 
                                   FontSize="12" 
                                   Foreground="#888"/>
                    </StackPanel>
                    
                    <TextBox Grid.Row="1" 
                             Text="{Binding RequestBody, Mode=TwoWay}"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             TextWrapping="Wrap"
                             FontFamily="Consolas"
                             Watermark="Enter JSON body here..."
                             Margin="0,5"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
