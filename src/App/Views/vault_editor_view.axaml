<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="App.Views.vault_editor_view"
             x:DataType="vm:vault_editor_view_model">

    <Border Background="{DynamicResource CardBackgroundBrush}"
            CornerRadius="8"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            Padding="16">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                <!-- Header -->
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Edit Secret"
                                   IsVisible="{Binding !IsNewSecret}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="New Secret"
                                   IsVisible="{Binding IsNewSecret}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <Button Classes="modern"
                                Command="{Binding CancelCommand}"
                                Content="Cancel"/>
                        <Button Classes="primary"
                                Command="{Binding SaveCommand}"
                                Content="Save Secret"/>
                    </StackPanel>
                </Grid>

                <!-- Name -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Name"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBox Text="{Binding SecretName, Mode=TwoWay}"
                             Watermark="Enter secret name..."
                             Background="{DynamicResource InputBackgroundBrush}"/>
                </StackPanel>

                <!-- Secret Type -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Type"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <ComboBox ItemsSource="{Binding SecretTypes}"
                              SelectedItem="{Binding SecretType}"
                              Background="{DynamicResource InputBackgroundBrush}"
                              HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Secret Value -->
                <StackPanel Spacing="4">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="Value"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <Button Grid.Column="1"
                                Classes="modern"
                                Command="{Binding ToggleValueVisibilityCommand}"
                                Padding="8,2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Show" IsVisible="{Binding !IsValueVisible}"/>
                                <TextBlock Text="Hide" IsVisible="{Binding IsValueVisible}"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                    <TextBox Text="{Binding SecretValue, Mode=TwoWay}"
                             RevealPassword="{Binding IsValueVisible}"
                             PasswordChar="*"
                             Watermark="Enter secret value..."
                             Background="{DynamicResource InputBackgroundBrush}"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Description"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBox Text="{Binding Description, Mode=TwoWay}"
                             Watermark="Enter description..."
                             Background="{DynamicResource InputBackgroundBrush}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="80"/>
                </StackPanel>

                <!-- Expiration -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Expiration Date (Optional)"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <CalendarDatePicker SelectedDate="{Binding ExpiresAt}"
                                        Background="{DynamicResource InputBackgroundBrush}"
                                        HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Tags -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Tags"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,8">
                        <TextBox Grid.Column="0"
                                 Text="{Binding NewTag, Mode=TwoWay}"
                                 Watermark="Add a tag..."
                                 Background="{DynamicResource InputBackgroundBrush}"/>
                        <Button Grid.Column="1"
                                Classes="accent"
                                Command="{Binding AddTagCommand}"
                                Content="Add"
                                Margin="8,0,0,0"/>
                    </Grid>
                    <ItemsControl ItemsSource="{Binding Tags}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource AccentBrush}"
                                        CornerRadius="12"
                                        Padding="8,4"
                                        Margin="0,0,8,8">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <TextBlock Text="{Binding}"
                                                   Foreground="White"
                                                   FontSize="12"/>
                                        <Button Command="{Binding $parent[ItemsControl].((vm:vault_editor_view_model)DataContext).RemoveTagCommand}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="0"
                                                Cursor="Hand">
                                            <TextBlock Text="x"
                                                       Foreground="White"
                                                       FontSize="12"/>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
