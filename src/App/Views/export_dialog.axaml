<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:App.ViewModels"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="500"
        x:Class="App.Views.export_dialog"
        x:DataType="vm:import_export_view_model"
        Title="Export Collections"
        Width="550"
        Height="500"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto,Auto" Margin="20">
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Export Collections"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <TextBlock Text="Select collections to export to Postman format (v2.1)"
                       FontSize="12"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Select All + Count -->
        <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,10">
            <CheckBox Grid.Column="0"
                      Content="Select All"
                      IsChecked="{Binding ExportAll, Mode=TwoWay}"
                      Foreground="{DynamicResource TextPrimaryBrush}"/>
            <TextBlock Grid.Column="2"
                       Text="{Binding SelectedCollectionCount, StringFormat={}{0} selected}"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Collections List -->
        <Border Grid.Row="2"
                Background="{DynamicResource ButtonBackgroundBrush}"
                CornerRadius="4"
                Margin="0,0,0,15"
                Padding="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding CollectionsForExport}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:export_collection_item">
                            <Border Padding="10,8"
                                    Background="Transparent"
                                    CornerRadius="4"
                                    Margin="2">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              Margin="0,0,10,0"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding ItemCount, StringFormat={}{0} items}"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"
                                               FontSize="12"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Export Options (only show when multiple collections selected) -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15" Spacing="8"
                    Name="ExportOptionsPanel">
            <TextBlock Text="Export Options"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            <RadioButton Content="Export to single file (array of collections)"
                         IsChecked="{Binding ExportToSingleFile, Mode=TwoWay}"
                         GroupName="ExportMode"
                         Foreground="{DynamicResource TextPrimaryBrush}"/>
            <RadioButton Content="Export to separate files (one per collection)"
                         GroupName="ExportMode"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         Click="SeparateFilesRadio_Click"/>
        </StackPanel>

        <!-- File Selection -->
        <Grid Grid.Row="4" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
            <TextBox Grid.Column="0"
                     Text="{Binding ExportFilePath, Mode=TwoWay}"
                     Watermark="Choose export location..."
                     IsReadOnly="True"
                     Background="{DynamicResource ButtonBackgroundBrush}"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     Margin="0,0,10,0"/>

            <Button Grid.Column="1"
                    Content="Browse..."
                    Click="BrowseButton_Click"
                    Padding="15,8"/>
        </Grid>

        <!-- Status Message + Buttons -->
        <Grid Grid.Row="5" RowDefinitions="Auto,Auto">
            <!-- Status Message -->
            <Border Grid.Row="0"
                    Padding="10"
                    Background="{DynamicResource ButtonBackgroundBrush}"
                    CornerRadius="4"
                    Margin="0,0,0,15"
                    IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="10">
                <Button Content="Cancel"
                        Click="CancelButton_Click"
                        Padding="20,8"/>

                <Button Content="Export"
                        Command="{Binding ExportCollectionCommand}"
                        IsEnabled="{Binding HasSelectedCollections}"
                        Padding="20,8"
                        Background="{DynamicResource AccentBrush}"
                        Foreground="White">
                    <Button.Styles>
                        <Style Selector="Button:disabled">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
