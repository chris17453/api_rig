<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:App.ViewModels"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="300"
        x:Class="App.Views.export_dialog"
        x:DataType="vm:import_export_view_model"
        Title="Export Collection"
        Width="500"
        Height="300"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Margin="20">
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Export Collection" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <TextBlock Text="Export your collection to Postman format (v2.1)"
                       FontSize="12"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Collection Info -->
        <Border Grid.Row="1" 
                Background="{DynamicResource ButtonBackgroundBrush}" 
                Padding="15" 
                CornerRadius="4"
                Margin="0,0,0,15"
                IsVisible="{Binding SelectedCollectionForExport, Converter={x:Static ObjectConverters.IsNotNull}}">
            <StackPanel Spacing="5">
                <TextBlock Text="Selected Collection:" 
                           Foreground="{DynamicResource TextSecondaryBrush}" 
                           FontSize="12"/>
                <TextBlock Text="{Binding SelectedCollectionForExport.name}" 
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           FontWeight="SemiBold"
                           FontSize="14"/>
                <TextBlock Text="{Binding SelectedCollectionForExport.items.Count, StringFormat={}{0} items}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="12"/>
            </StackPanel>
        </Border>

        <!-- File Selection -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
            <TextBox Grid.Column="0"
                     Text="{Binding ExportFilePath, Mode=TwoWay}"
                     Watermark="Choose export location..."
                     IsReadOnly="True"
                     Background="{DynamicResource ButtonBackgroundBrush}"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     Margin="0,0,10,0"/>
            
            <Button Grid.Column="1"
                    Content="Browse..."
                    Click="BrowseButton_Click"
                    Padding="15,8"/>
        </Grid>

        <!-- Status Message -->
        <Border Grid.Row="3" 
                Padding="10"
                Background="{DynamicResource ButtonBackgroundBrush}"
                CornerRadius="4"
                VerticalAlignment="Top"
                IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Content="Cancel"
                    Click="CancelButton_Click"
                    Padding="20,8"/>
            
            <Button Content="Export"
                    Command="{Binding ExportCollectionCommand}"
                    IsEnabled="{Binding !IsExporting}"
                    Padding="20,8"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White">
                <Button.Styles>
                    <Style Selector="Button:disabled">
                        <Setter Property="Opacity" Value="0.5"/>
                    </Style>
                </Button.Styles>
            </Button>
        </StackPanel>
    </Grid>
</Window>
