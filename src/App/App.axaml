<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:App.Converters"
             x:Class="App.App"
             RequestedThemeVariant="Dark">
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
        
        <!-- Modern Expander Style -->
        <Style Selector="Expander.modern-card">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        
        <Style Selector="Expander.modern-card /template/ ToggleButton#ExpanderHeader">
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
        
        <Style Selector="Expander.modern-card /template/ ToggleButton#ExpanderHeader:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource ButtonHoverBrush}"/>
        </Style>

        <Style Selector="Expander.modern-card /template/ Border#ExpanderContent">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <Style Selector="Expander.modern-card /template/ ToggleButton#ExpanderHeader TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>
    </Application.Styles>
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://App/Styles/AppTheme.axaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:MethodColorConverter x:Key="MethodColorConverter"/>
            <converters:BoolToLockIconConverter x:Key="BoolToLockIconConverter"/>
            <converters:BoolToLockTextConverter x:Key="BoolToLockTextConverter"/>
            <converters:HttpMethodToBrushConverter x:Key="HttpMethodToBrushConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
